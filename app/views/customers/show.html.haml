#customer-info
  .row
    .col-xs-12
      = link_to "Back to all customers", customers_path, class: "btn btn-success"
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h1= display_name(@customer)
        .panel-body
          .row
            .customer-avatar
              .col-xs-2.col-xs-offset-10
                - if @customer.avatar.present?
                  = image_tag @customer.avatar.url, {class: "avatar avatar-large"}
              .col-xs-3.col-xs-offset-9
                Email address:
                = @customer.email
      - if @customer.books.on_loan.any?
        .row
          .col-xs-12
            .panel.panel-default
              .panel-heading
                Current Loans
              .panel-body
                .ul
                  - @customer.books.on_loan.each do |b|
                    = link_to book_path(b) do
                      .li.list-group-item
                        .row
                          .col-xs-12.col-md-3
                            %h4
                              Book title:
                            = b.title
                          .col-xs-12.col-md-3
                            %h4
                              Book author:
                            = b.author
      - if @customer.books.available.any?
        .row
          .col-xs-12
            .panel.panel-default
              .panel-heading
                Loan History
              .panel-body
                .ul
                  - @customer.books.available.each do |b|
                    = link_to book_path(b) do
                      .li.list-group-item
                        .row
                          .col-xs-12.col-md-3
                            %h4
                              Book title:
                            = b.title
                          .col-xs-12.col-md-3
                            %h4
                              Book author:
                            = b.author
