#customers-index
  .row
    .col-xs-12
      %h2 Users
  .row
    .col-xs-12
      = link_to "Add a new customer", new_customer_path(@customer), class: "btn btn-default"

  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          Users
        .ul
          - @customers.each do |c|
            .li.list-group-item
              .row
                .col-xs-12.col-md-3
                  = display_name(c)
                .col-xs-12.col-md-3
                  = link_to "View customer", customer_path(c), class: "btn btn-primary btn-sm"
                .col-xs-12.col-md-3
                  = link_to "Edit customer", edit_customer_path(c), class: "btn btn-success btn-sm"
                .col-xs-12.col-md-3
                  = link_to "Delete customer", delete_customer_path(c), method: :delete, data: {confirm: "Are you sure you wish to permanently delete this user?"}, class: "btn btn-danger #{'disabled' if c.loans.outstanding.any?}"
  .row
    .col-xs-12.col-md-3.col-md-offset-9
      = paginate @customers

